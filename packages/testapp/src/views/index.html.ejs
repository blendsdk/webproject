<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <title>TestApp1</title>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.0/axios.min.js"></script>
    </head>
    <body>
        <form id="loginForm">
            <div>
            <label for="username">
                Username
                <input type="text" name="username" value="user1">
            </lable>
            </div>
            <div>
            <label for="password">
                Password
                <input type="text" name="password" value="secret">
            </label>
            </div>
            <div>
                <button id="loginBtn" type="button">Login</button>
            </div>
            <div>
                <button id="credBtn" type="button">Get credentials</button>
            </div>
        </form>
        <pre id="log">
        </pre>
    </body>
    <script>
        const loginBtn = document.getElementById("loginBtn");
        const credBtn = document.getElementById("credBtn");
        const form = document.getElementById("loginForm");
        const log = document.getElementById("log");
        form.addEventListener("submit",(e)=>{
            e.preventDefault();
        })

        credBtn.addEventListener("click",(e)=>{
            axios({
                method:"post",
                url:"http://localhost:4000/api/credentials"
            }).then((result) => {
                log.innerHTML = JSON.stringify(result.data,null,4);
            }).catch((result)=>{
                log.innerHTML = JSON.stringify(result.response.data,null,4);
            });
            e.preventDefault();
        })

        loginBtn.addEventListener("click",(e)=>{
            const formData = new FormData(form);
            var object = {};
            formData.forEach((value, key) => {object[key] = value});
            log.innerHTML = "";
            axios({
                method:"post",
                url:"http://localhost:4000/api/login",
                data: object
            }).then((result) => {
                var data = result.data;
                data.check = data.exp - Date.now();
                log.innerHTML = JSON.stringify(data,null,4);
            }).catch((result)=>{
                log.innerHTML = JSON.stringify(result.response.data,null,4);
            });
            e.preventDefault();
        })
    </script>
</html>
