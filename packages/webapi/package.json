{
    "name": "webapi",
    "private": true,
    "version": "1.0.0",
    "description": "The WebAPI project",
    "repository": {
        "type": "git",
        "url": "https://github.com/blendsdk/webproject.git"
    },
    "author": "",
    "license": "MIT",
    "scripts": {
        "start": "yarn serve",
        "build": "yarn build-ts && yarn tslint",
        "serve": "node ./dist/server.js",
        "watch-node": "nodemon ./dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
        "test": "cross-env NODE_ENV=test && jest --detectOpenHandles --runInBand --passWithNoTests --forceExit",
        "watch-test": "yarn test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -p tsconfig.json --fix",
        "debug": "yarn build && yarn watch-debug",
        "serve-debug": "nodemon --delay 3 --watch ../ --inspect ./dist/server.js",
        "watch-debug": "yarn build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\""
    },
    "dependencies": {
        "@blendsdk/codekit": "^1.1.12",
        "@blendsdk/express": "^1.1.16",
        "@blendsdk/schemakit": "^1.1.12",
        "@blendsdk/sqlkit": "^1.1.12",
        "@blendsdk/stdlib": "^1.1.12",
        "@blendsdk/webapi-config": "^1.0.0",
        "@blendsdk/webapi-database": "^1.0.0",
        "@blendsdk/webapi-service": "^1.0.0",
        "@blendsdk/webapi-smtpmail": "^1.0.0",
        "@blendsdk/webapi-token-auth": "^1.0.0",
        "@blendsdk/webapi-winston-logger": "^1.0.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/errorhandler": "^0.0.32",
        "@types/helmet": "^0.0.44",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.1.0",
        "ejs": "^2.7.1",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-bearer-token": "^2.4.0",
        "express-session": "^1.16.2",
        "express-validator": "^6.2.0",
        "helmet": "^3.21.1",
        "jsonwebtoken": "^8.5.1",
        "lusca": "^1.6.1",
        "request": "^2.88.0",
        "request-promise": "^4.2.4"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.1",
        "@types/compression": "^1.0.1",
        "@types/cors": "^2.8.6",
        "@types/errorhandler": "^0.0.32",
        "@types/express": "^4.17.1",
        "@types/express-session": "^1.15.14",
        "@types/jsonwebtoken": "^8.3.4",
        "@types/lusca": "^1.6.1",
        "@types/morgan": "^1.7.37",
        "@types/request": "^2.48.3"
    }
}
