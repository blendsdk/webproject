{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./",
        "target": "es6",
        "module": "commonjs",
        "lib": ["dom", "es6"],
        "declaration": true,
        "sourceMap": true,
        "importHelpers": true,
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}
